{% if socialLink %}
<div class="row testimonials-box">
    <div class="quote">
        <blockquote class="blockquote">{{ quote }}</blockquote>
    </div>
</div>
<div class="row testimonial-info">
    <div class="user-image">
        {{ userImage }}
    </div>
    <div class="user-name">
        <strong>{{ userName }}</strong>
    </div>
    <div class="job-title">
        {{ jobTitle }}
    </div>
    <div class="social-link">
        {{ socialLink }}
    </div>
</div>  
{% else %}
<div class="testimonials-box">
    <div class="quote">
        <blockquote class="blockquote">{{ quote }}</blockquote>
    </div>
</div>
<div class="testimonial-info">
    <div class="user-image">
        {{ userImage }}
    </div>
    <div class="user-name">
        <strong>{{ userName }}</strong>
    </div>
    <div class="job-title">
        {{ jobTitle }}
    </div>
</div>
{% endif %}