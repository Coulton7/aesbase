{% if socialLink %}
<div class="row testimonials-box">
    <div class="quote">
        <blockquote class="blockquote">{{ quote }}</blockquote>
    </div>
</div>
<div class="row testimonial-info pt-5 pb-3">
    <div class="col-lg-4 col-6">
        <div class="user-image text-center">
            {{ userImage }}
        </div>
    </div>
    <div class="col-lg-3 col-3">
        <div class="user-name text-center">
            <strong>{{ userName }}</strong>
        </div>
        <div class="job-title">
            {{ jobTitle }}
        </div>
        <div class="social-link">
            {{ socialLink }}
        </div>
        <div class="content-link">
            {{ contentLink }}
        </div>
    </div>
</div> 
{% else %}
<div class="testimonials-box">
    <div class="quote">
        <blockquote class="blockquote">{{ quote }}</blockquote>
    </div>
</div>
<div class="row testimonial-info pt-5 pb-3">
    <div class="col-lg-4 col-6">
        <div class="user-image text-center">
            {{ userImage }}
        </div>
    </div>
    <div class="col-lg-3 col-3">
        <div class="user-name">
            <strong>{{ userName }}</strong>
        </div>
        <div class="job-title">
            {{ jobTitle }}
        </div>
        <div class="content-link">
            {{ contentLink }}
        </div>
    </div>
</div>
{% endif %}